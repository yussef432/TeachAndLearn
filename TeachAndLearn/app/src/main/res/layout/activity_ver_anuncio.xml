<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ver_titulo_anuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del Anuncio"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ver_fecha_creacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Creación"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ver_fecha_tutoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de la Tutoría"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ver_tipo_anuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Anuncio"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ver_horas_anuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horas"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ver_precio_por_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio por Hora"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ver_descripcion_anuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/reservas_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>

    <Button
        android:id="@+id/btn_reservar_anuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservar Anuncio"/>

    <Button
        android:id="@+id/volver_atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:onClick="onClickVolver"
        android:layout_marginTop="8dp"/>

</LinearLayout>
