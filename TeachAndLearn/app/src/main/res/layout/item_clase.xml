<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/titulo_clase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/fecha_clase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/estado_clase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/caducada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserva Caducada"
        android:textSize="14sp"
        android:textColor="#FF0000"
        android:visibility="gone" /> <!-- Inicialmente oculto -->

    <Button
        android:id="@+id/btn_cancelar_peticion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar PeticiÃ³n"
        android:visibility="gone"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"/> <!-- Inicialmente oculto -->
</LinearLayout>
